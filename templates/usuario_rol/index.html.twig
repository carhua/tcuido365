{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}
{% import 'macro/pagination.html.twig' as pagination %}

{% set _title = 'Rol' %}
{% set _main_title = 'Listado' %}
{% set _section =  'usuario_rol_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show('Menus') }}
{% endblock %}

{% block _main %}
    <div class="table-responsive">
        {{ action.tbl_start() }}
            <thead>
            <tr>
                {{ action.th('#', false, 'text-center') }}
                {{ action.th('Datos', false, 'd-block d-sm-none') }}
                {{ action.th('Nombre', true, 'd-none d-sm-table-cell') }}
                {{ action.th('Rol', true, 'd-none d-sm-table-cell') }}
                {{ action.th('Activo', true, 'text-center d-none d-sm-table-cell') }}
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for usuario_rol in paginator %}
                <tr>
                    <td class="text-center">{{ loop.index }}</td>
                    <td class="d-block d-sm-none font-size-xs">
                        {{ usuario_rol.nombre }} <br>
                        {{ usuario_rol.rol }} <br>
                        {{ usuario_rol.isActive | yesnocustom | raw }}
                    </td>
                    <td class="d-none d-sm-table-cell">{{ usuario_rol.nombre }}</td>
                    <td class="d-none d-sm-table-cell">{{ usuario_rol.rol }}</td>
                    <td class="d-none d-sm-table-cell text-center">{{ usuario_rol.isActive | yesnocustom | raw }}</td>
                    <td class="text-right">
                        {% if access.has('view') %}
                            {{ action.btn_show_link2_ico(path('usuario_rol_show', {'id': usuario_rol.id})) }}
                        {% endif %}
                        {% if access.has('edit', usuario_rol) %}
                            {{ action.btn_edit_link2_ico(path('usuario_rol_edit', {'id': usuario_rol.id})) }}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No hay registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ pagination.show(paginator, _section) }}
{% endblock %}

{% block _main_filters %}
    <form class="mb-7" id="frm_filters">
        <div class="row align-items-center">
            <div class="col-lg-9 col-xl-8">
                <div class="row align-items-center">
                    <div class="col-md-4 my-2 my-md-0">
                        <div class="input-icon">
                            <input type="text" class="form-control" placeholder="Buscar..." id="filter_text"
                                   value="{{app.request.get('b')}}" name="b" />
                            <span>
                                <i class="flaticon2-search-1 text-muted"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-3 my-2 my-md-0">
                        <div class="d-flex align-items-center">
                            <label class="mr-3 mb-0 d-none d-md-block" for="filter_active">Activo: </label>
                            <select class="form-control" id="filter_active" name="ac">
                                <option value="" {% if app.request.get('ac') == '' %} selected {% endif %}>Todos</option>
                                <option value="1" {% if app.request.get('ac') == '1' %} selected {% endif %}>Si</option>
                                <option value="0" {% if app.request.get('ac') == '0' %} selected {% endif %}>No</option>
                            </select>
                        </div>
                    </div>
                    <button class="btn-send btn btn-light-primary px-6 font-weight-bold mr-2">Aplicar</button>
                    <input type="reset" class="btn-clear btn btn-outline-secondary mr-2" value="Limpiar" />
                </div>
            </div>
            <div class="col-lg-3 col-xl-4 mt-5 mt-lg-0">
            </div>
        </div>
    </form>
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_options_ico.html.twig' %}
{% endblock %}

{% block _main_footer %}
    {% include 'crud/_index_links.html.twig' with {'route_base': 'usuario_rol'} %}
{% endblock%}

{% block _main_actions %}
    {% include 'crud/_index_links_ico.html.twig' with {'route_base': 'usuario_rol'}  %}
{% endblock %}

{% block _stylesheets %}
{% endblock %}

{% block _javascripts %}
    <script>
        jQuery(document).ready(function() {
            $(document).on('change', '#filter_size', function(){
                let route = '{{ path('usuario_rol_index') }}';
                route = route + "?" + 'n=' + $('#filter_size option:selected').val();
                route = route + "&" + 'b=' + $('#filter_text').val();
                window.location = route;
            });

            $(document).on('click', '.btn-send', function(){
                window.location = '{{ path('usuario_rol_index') }}';
            });

            // Solución: limpiar filtros y recargar sin parámetros
            $(document).on('click', '.btn-clear', function(e){
                e.preventDefault();
                window.location = '{{ path('usuario_rol_index') }}';
            });
        });
    </script>
{% endblock %}