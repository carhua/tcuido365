{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Parametro' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'parametro_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2('Parametros',_section,'Mostrar') }}
{% endblock %}

{% block _main %}
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parametro.id }}</td>
            </tr>
            {% if parametro.padre %}
                <tr>
                    <th>Padre</th>
                    <td>{{ parametro.padre }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Nombre</th>
                <td>{{ parametro.nombre }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ parametro.alias }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ parametro.valor }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ parametro.activo | yesnocustom | raw}}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-none d-sm-table-cell">
        {{ action.btn_list_link(path('parametro_index')) }}
        {{ action.btn_new_link(path('parametro_new')) }}
        {{ action.btn_edit_link(path('parametro_edit', {'id': parametro.id})) }}
        {{ action.btn_print_link(path('parametro_show', {'id': parametro.id})) }}
        {{ action.btn_delete_form(path('parametro_delete', {'id': parametro.id}), csrf_token('delete' ~ parametro.id)) }}
    </div>

{% endblock %}

{% block _main_tools %}
    <ul class="nav nav-pills nav-pills--success">
        <li class="nav-item">
            {{ action.btn_list_link_ico(path('parametro_index')) }}
        </li>
        <li class="nav-item">
            {{ action.btn_new_link_ico(path('parametro_new')) }}
        </li>
        <li class="nav-item">
            {{ action.btn_edit_link_ico(path('parametro_edit', {'id': parametro.id})) }}
        </li>
        <li class="nav-item">
            {{ action.btn_print_link_ico(path('parametro_show', {'id': parametro.id})) }}
        </li>
        <li class="nav-item">
            {{ action.btn_delete_form_ico(path('parametro_delete', {'id': parametro.id}), csrf_token('delete' ~ parametro.id)) }}
        </li>
    </ul>
{% endblock %}
