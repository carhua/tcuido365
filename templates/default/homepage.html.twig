            },
            subtitle: {
                text: 'Año: '+{{ anioActual }}
            },

            xAxis: {
                categories: ['Casos']
            },

            yAxis: {
                allowDecimals: false,
                min: 0,
                title: {
                    text: 'Cantidad'
                }
            },

            tooltip: {
                formatter: function () {
                    return '<b>' + this.x + '</b><br/>' +
                        this.series.name + ': ' + this.y + '<br/>'
